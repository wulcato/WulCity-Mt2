{
  "name": "metin2-patcher-electron",
  "author": "Karbust",
  "description": "A simple metin2 patcher made in Electron with React and TypeScript.",
  "version": "0.1.0",
  "private": true,
  "main": "build/electron/src_electron/App.js",
  "homepage": "./",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "electron-start": "tsc --project src_electron/tsconfig.json && electron build/electron/src_electron/App.js",
    "electron-pack": "yarn build && tsc --project src_electron/tsconfig.json && electron-builder --win -c.extraMetadata.main=build/electron/src_electron/App.js",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "lint-fix": "eslint src/**/*.{js,jsx,ts,tsx} --fix",
    "css-lint": "npx stylelint \"src/**/*.css\"",
    "css-lint-fix": "npx stylelint \"src/**/*.css\" --fix"
  },
  "build": {
    "extends": null,
    "productName": "Metin2 Patcher Electron",
    "compression": "normal",
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "portable": {
      "artifactName": "metin2_patcher_electron.exe",
      "requestExecutionLevel": "admin",
      "unpackDirName": "metin2_patcher_electron"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "electron-is-dev": "^2.0.0",
    "i18next": "^20.2.2",
    "is-online": "^9.0.0",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.8.15",
    "swiper": "^7.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.1.2",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.11.10",
    "@types/node-fetch": "^3.0.3",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.0",
    "electron": "^16.0.2",
    "electron-builder": "^22.14.5",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "postcss": "^8.4.4",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.2.19",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.2",
    "vite": "^2.6.13",
    "vite-plugin-html": "^2.1.1"
  }
}
